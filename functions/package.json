{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "clean": "rm -rf lib",
    "firebase-deploy": "firebase deploy --only functions",
    "firebase-deploy:": "firebase deploy --only functions:onGameUpdate",
    "deploy": "npm run clean && npm run build && npm run firebase-deploy",
    "deploy:": "npm run clean && npm run build && npm run firebase-deploy:",
    "da": "npm run set:dev && npm run deploy && npm run set:prod && npm run deploy",
    "logs": "firebase functions:log",
    "set:dev": "firebase use stroll-the-dice-development",
    "set:prod": "firebase use stroll-the-dice-5fa5a",
    "projects": "firebase projects:list"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/functions/src/index.js",
  "license": "ISC",
  "dependencies": {
    "@mailchimp/mailchimp_transactional": "^1.0.33",
    "axios": "^0.21.1",
    "firebase": "^9.0.1",
    "firebase-admin": "^9.11.1",
    "firebase-functions": "^3.15.4",
    "firebase-tools": "^9.16.6",
    "lodash.orderby": "^4.6.0",
    "nanoid": "^3.1.25",
    "stripe": "^8.171.0"
  },
  "devDependencies": {
    "@types/lodash.orderby": "^4.6.6",
    "firebase-functions-test": "^0.3.2",
    "typescript": "^4.4.2"
  },
  "private": true
}
