{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "clean": "rm -rf lib",
    "firebase-deploy": "firebase deploy --only functions",
    "firebase-deploy:": "firebase deploy --only functions:onProfileCreate",
    "deploy": "npm run clean && npm run build && npm run firebase-deploy",
    "deploy:": "npm run clean && npm run build && npm run firebase-deploy:",
    "logs": "firebase functions:log",
    "set:dev": "firebase use stroll-the-dice-development",
    "set:prod": "firebase use stroll-the-dice-5fa5a",
    "projects": "firebase projects:list"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/functions/src/index.js",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "firebase": "^8.7.1",
    "firebase-admin": "^9.10.0",
    "firebase-functions": "^3.14.1",
    "firebase-tools": "^9.12.1",
    "nanoid": "^3.1.23",
    "stripe": "^8.167.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.2.3",
    "typescript": "^4.3.2"
  },
  "private": true
}
